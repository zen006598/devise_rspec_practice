<div class='mt-24'>
  <div class='flex m-4'>
    <%= link_to 'Create Course', new_course_path, class: 'hover:bg-lime-600 hover:text-white border border-lime-600 rounded text-xl px-2 py-1' %>
  </div>
  <% @courses.each do |course| %>
    <%= course.title %>
    <%= link_to 'Edit', edit_course_path(course) %>
    <%= link_to 'Remove', course_path(course), data: {turbo_method: :delete} %>
  <% end %>
</div>